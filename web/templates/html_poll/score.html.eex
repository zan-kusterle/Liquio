<div class="score-box" style="background-color: <%= score_color @poll.results.mean %>;">
	<div class="number">
		<%= if @poll.choice_type == "probability" do %>
			<%= round(@poll.results.mean * 100) %><span class="percent">%</span>
		<% else %>
			<%= round(@poll.results.mean) %>
		<% end %>
	</div>
	<div class="subtext"><%= @poll.results.total %> voting power</div>
</div>