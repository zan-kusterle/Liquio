<% url = "https://liqu.io/polls/#{@poll.id}" %>
<div class="inline-toolbox">
	<div class="toggle">EMBED WITH HTML</div>
	<p class="code">
		&lt;a class="liquio-inline" href="<%= url %>"&gt;<br>&lt;b style="vertical-align: middle; margin-right: 15px;"&gt;<%= @poll.title %>&lt;/b&gt;<br>&lt;iframe src="<%= url %>/embed" scrolling="no" frameBorder="0" width="120px" height="45px" style="vertical-align: middle; margin-right: 4px; pointer-events: none;"&gt;&lt;/iframe&gt;<br>&lt;/a&gt;
	</p>
</div>