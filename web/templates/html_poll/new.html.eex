<form method="POST" action="/polls" autocomplete="off" class="pure-form pure-g new-poll">
	<input type="hidden" name="_csrf_token" value="<%= get_csrf_token() %>" />

	<label for="title" class="pure-u-1 pure-u-sm-1-6 row-label">Title</label>
	<div class="pure-u-1 pure-u-sm-5-6 row-input">
		<input id="title" name="title" type="text" required placeholder="Be as unambiguous as possible" class="pure-input-1" />
	</div>

	<label for="topics" class="pure-u-1 pure-u-sm-1-6 row-label">Topics</label>
	<div class="pure-u-1 pure-u-sm-5-6 row-input">
		<input id="topics" name="topics" type="text" required placeholder="Politics, economics" class="pure-input-1" />
	</div>

	<label class="pure-u-1 pure-u-sm-1-6 row-label">Choice Type</label>
	<div class="pure-u-1 pure-u-sm-5-6 row-input choices">
		<label for="probability" class="pure-radio">
			<input id="probability" type="radio" name="choice_type" value="probability" checked>
			Probability <span class="choice-type-details">- vote with a probability between 0 and 1, mean result</span>
		</label>
		<label for="quantity" class="pure-radio">
			<input id="quantity" type="radio" name="choice_type" value="quantity">
			Quantity <span class="choice-type-details">- vote with any number, median result</span>
		</label>
		<label for="time_quantity" class="pure-radio">
			<input id="time_quantity" type="radio" name="choice_type" value="time_quantity">
			Time quantity <span class="choice-type-details">- vote with multiple time and number pairs, median result</span>
		</label>
	</div>

	<div class="pure-u-sm-1-6"></div>
	<div class="pure-u-1 pure-u-sm-5-6 row-input create">
		<button type="submit" class="pure-button pure-button-primary">Create</button>

		<p class="notes">You won't be able to modify or delete poll after it's live.</p>
	</div>
</form>