{
  "name": "Liquio",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Vote on anything, anywhere on the web",
  "homepage_url": "https://liqu.io",
  "background": {
    "scripts": ["browser_polyfill.js", "background_scripts/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["browser_polyfill.js", "content_scripts/index.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Liquio",
    "default_icon": "icons/off.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ]
}